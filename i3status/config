# vim: filetype=conf

general {
    colors = true
    interval = 10
}

order += "disk /"
order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "memory"
order += "volume master"
order += "cpu_temperature 0"
order += "battery all"
order += "tztime local"

disk "/" {
    format = "Disk: %used/%total"
    low_threshold = "20"
    threshold_type = "percentage_free"
    format_below_threshold = "Disk %used/%total"
}

wireless _first_ {
    format_up = "Wireless: (%quality at %essid, %bitrate / %frequency) %ip"
    format_down = "Wireless: down"
}

ethernet _first_ {
    format_up = "Ethernet: %ip"
    format_down = "Ethernet: down"
}

volume master {
    # device = "default"
    device = "pulse"
    # device = "pulse:alsa_output.pci-0000_00_1f.3.analog-stereo"
    format = "%devicename: %volume"
    format_muted = "%devicename: Muted"
}

memory {
    # format = "%used/%total"
    format = "free %available (%used) / %total"
    threshold_degraded = "2G"
    threshold_critical = "1G"
    format_degraded = "Low memory! free %available (%used) / %total"
}

cpu_temperature 0 {
    format = "CPU: %degrees °C"
    format_above_threshold = "CPU: %degrees °C"
    max_threshold = 50
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input"
}

battery all {
    format = "Battery: %status %percentage %remaining"
    path = "/sys/class/power_supply/BAT%d/uevent"
    last_full_capacity = true
    hide_seconds = true
    low_threshold = 20
    threshold_type = "percentage"
    status_chr = "CHR"
    status_bat = "DCHR"
    status_unk = "UNK"
    status_full = "FULL"
}

tztime local {
    format = "%d-%m-%Y (%a), %H:%M"
}
