#!/bin/zsh

alias b="cd -"
alias q="cd $HOME"
alias d="cd $XDG_DOCUMENTS_DIR && la"
alias i="cd $XDG_PICTURES_DIR && l"
alias t="cd $HOME/tmp && la"
alias m="cd $XDG_MUSIC_DIR && l"
alias cf="cd $XDG_CONFIG_HOME"
alias cac="cd $XDG_CACHE_HOME"
alias ll="cd $HOME/.local && l"
alias sc="cd $HOME/.local/sc && l"
alias dt="cd $XDG_DATA_HOME && l"
alias mn="cd $HOME/mnt && l"
alias ph="cd $HOME/mnt/phone"
alias dev="cd $HOME/mnt/dev"
alias ts="cd $HOME/tmp/src && l"
alias s="cd $HOME/.local/src && la"
alias G="cd $HOME/.local/git & ls -a"

alias cfx="cd $XDG_CONFIG_HOME/x11 && nvim"
alias cfv="cd $XDG_CONFIG_HOME/nvim && nvim"
alias cfz="cd $XDG_CONFIG_HOME/zsh && nvim .zshrc"
alias cfa="cd $XDG_CONFIG_HOME/zsh && nvim aliasrc"
alias cfp="cd $XDG_CONFIG_HOME && nvim zprofile"
alias cfl="cd $XDG_CONFIG_HOME/lf && nvim lfrc"
alias cfA="cd $XDG_CONFIG_HOME/alacritty && nvim alacritty.yml"
alias cfi="cd $XDG_CONFIG_HOME/i3 && nvim config"
alias cfis="cd $XDG_CONFIG_HOME/i3status && nvim config"
alias cfib="cd $XDG_CONFIG_HOME/i3blocks && nvim config"
alias subs="cd $XDG_DOCUMENTS_DIR && nvim ytsubs"
alias bm="cd $XDG_DOCUMENTS_DIR/bookmarks && nvim bookmarks"
alias vw="cd $XDG_DOCUMENTS_DIR/vimwiki && nvim index.md"

alias ls="ls --color=auto --group-directories-first -h"
alias l="ls --color=auto -a"
alias la="ls --color=auto -al"
alias diff="diff --color=auto"
alias ip="ip --color=auto"
alias bat="bat -pp --theme \"Visual Studio Dark+\""
alias batt="bat --theme \"Visual Studio Dark+\""
alias sail="[ -f sail ] && sh sail || sh vendor/bin/sail"
alias lf="lfub"
alias cal="cal -m"
alias dustt="dust -br"
alias mpvv="ls -t | mpv --mute --loop -playlist -"
alias mpvml="mpv --mute --loop $*"
alias Xaw="Xephyr :5& sleep 1 ; DISPLAY=:5 awesome"
alias Xi3="Xephyr :5& sleep 1 ; DISPLAY=:5 i3"
alias clipnl="xclip -selection clipboard"
alias clip="tr -d "\n" | xclip -selection clipboard"
alias cpimg="xclip -selection clipboard -t image/png -i"
alias jctl="sudo journalctl -r"
alias sjctl="sudo journalctl -xe"
alias ssctl="sudo systemctl"
alias sctl="systemctl"
alias mmvv="mmv *"

# alias cp="cp -v"
alias mv="mv -iv"
alias rm="rm -vI"
alias z="zathura"
alias n="ncmpcpp 2>/dev/null"
alias nsxiv="nsxiv -aq"
alias ns="nsxiv"
alias v="nvim"
alias p="sudo pacman"
alias cl="clear"
alias r="exec zsh"
alias md="mkdir -p"
alias ka="killall -v"
alias ska="sudo killall -v"
alias wget="wget -c"
alias ffmpeg="ffmpeg -hide_banner"
alias py="python3"
alias py2="python2"

alias g="git"
alias gdf="git --git-dir=$HOME/.local/git/dotfiles --work-tree=$HOME/.config"

gten(){ translate -s en -t pl $* }
gtuk(){ translate -s uk -t pl $* }
gtpl(){ translate -s pl -t en $* }
gtplc(){ translate -s pl -t en $* | tr -d "\n" | xclip -selection clipboard }
